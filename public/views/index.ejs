<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Student Records</title>
  </head>
  <body>

    <!-- Search Details -->
    <div class="container my-3">
        <div class="row">
            <h1 class="">Filter Student Records</h1>
            <div class="col-md-3 text-end">By Name</div>
            <div class="col-md-3 text-end">By Roll</div>
            <div class="col-md-3 text-end">By Mobile</div>
            <div class="col-md-3 "></div>
        </div>

        <form action="/search" method="post">
            <div class="row">
                <div class="col-md-3 "><input type="text" class="form-control mt-1" name="searchname" placeholder="Name" /></div>
                <div class="col-md-3 "><input type="text" class="form-control mt-1" name="searchroll" placeholder="Roll" /></div>
                <div class="col-md-3 "><input type="text" class="form-control mt-1" name="searchmobile" placeholder="Mobile" /></div>
                <div class="col-md-3 "><button class="btn btn-info btn-fluid w-100 text-white mt-1"> search </button></div>
            </div>
        </form>        
    </div>


    <!-- Display Details -->
    <div class="container mt-3">
      <h1 class="">Studnt Records</h1>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Roll</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Address</th>
            <th scope="col">Profile</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(function(row) { %>
          <tr class="align-middle">
            <th scope="row"><%= row.roll %></th>
            <td><%= row.name %></td>
            <td><%= row.mobile %></td>
            <td><%= row.address %></td>
            <td>
              <a href="<%= row.profileImage %>">
                <img style="width: 50px; height: 50px; border-radius: 50px; " src="<%= row.profileImage %>" alt="profileImage" srcset="">
              </a>
            </td>
            <td>
              <a href="/updateRecord/<%= row.roll %>" class="btn btn-primary btn-sm" ><i class="fa fa-edit" aria-hidden="true"></i></a>
              <a href="/delete/<%= row._id %>" class="btn btn-danger btn-sm" ><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Registration Form -->
    <div class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-md-5 border border-info rounded-1">
          <div class="row">
            <div class="col-md-12 bg-info py-2 text-white">Student Details Form</div>
            <form method="POST" enctype="multipart/form-data">
              
              <div class="form-group row mt-3">
                <label for="inputPassword" class="col-sm-2 col-form-label text-end" > Name </label>
                <div class="col-sm-10 "> <input type="text" class="form-control" name="name" placeholder="Name" required /></div>
              </div>

              <div class="form-group row mt-3">
                <label for="inputPassword" class="col-sm-2 col-form-label text-end" > Roll </label>
                <div class="col-sm-10 "> <input type="text" class="form-control" name="roll" placeholder="184065" required /></div>
              </div>

              <div class="form-group row mt-3">
                <label for="inputPassword" class="col-sm-2 col-form-label text-end" > Mobile </label>
                <div class="col-sm-10 "> <input type="text" class="form-control" name="mobile" placeholder="8102306237" required /></div>
              </div>

              <div class="form-group row mt-3">
                <label for="inputPassword" class="col-sm-2 col-form-label text-end "> Address </label>
                <div class="col-sm-10 "> <input type="text" class="form-control" name="address" placeholder="Address" required /></div>
              </div>

              <div class="form-group row mt-3">
                <label for="file" class="col-sm-2 col-form-label text-end "> Image </label>
                <div class="col-sm-10 "><input type="file" class="form-control" name="profileImage" required /></div>
              </div>

              <button class="btn btn-info float-end my-2 rounded-1 px-4 text-white">submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
